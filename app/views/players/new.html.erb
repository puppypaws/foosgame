<%= form_with scope: :player, url: players_path, local: true do |form| %>

    <%= form.collection_select :team_id, @teams, :id, :name%>

    <p>
        <%= form.label :firstname, placeholder = "First name"%>
        <br>
        <%= form.text_area :firstname %>
    </p>

    <p>
        <%= form.label :lastname, placeholder = "Last name" %>
        <br>
        <%= form.text_area :lastname %>
    </p>

    <p>
        <%= form.submit %>
    </p>

<% end %>